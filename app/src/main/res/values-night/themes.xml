<resources>
    <!-- Base application theme. -->
    <style name="Theme.AncopApp.Night" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:actionOverflowButtonStyle">@style/Overflowicontheme</item>
        <item name="colorControlActivated">@style/BottomNavIconTheme</item>

    </style>

    <style name="Overflowicontheme" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_baseline_more_vert_24</item>
    </style>

    <style name="BottomNavIconTheme" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="colorControlActivated">@color/white</item>
    </style>
</resources>